{
  "name": "trendzy",
  "version": "1.0.0",
  "description": "a simple ecommerce website with MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "node --watch backend/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -d",
    "build:ui": "rm -rf backend/dist && cd ../frontend/ && npm run build && cp -r dist ../backend"
  },
  "author": "abel sintayehu",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.2"
  }
}
